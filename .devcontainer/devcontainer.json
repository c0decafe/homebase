{
  "name": "Nix Homebase (Flakes + Neovim)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true
    }
  },
  "containerEnv": {
    "NIX_CONFIG": "experimental-features = nix-command flakes"
  },
  "onCreateCommand": "echo 'eval \"$(direnv hook zsh)\"' >> /home/codespace/.zshrc",
  "postCreateCommand": "curl -L https://raw.githubusercontent.com/cachix/devenv/latest/install.sh | bash && direnv allow || true",
  "remoteUser": "codespace",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
        "vim.enableNeovim": true
      },
      "extensions": [
        "tamasfe.even-better-toml",
        "jnoortheen.nix-ide",
        "mkhl.direnv",
        "asvetliakov.vscode-neovim",
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}