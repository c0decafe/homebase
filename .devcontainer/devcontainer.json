{
  "name": "nix-homebase",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "NIX_CONFIG": "experimental-features = nix-command flakes\naccept-flake-config = true"
  },
  "forwardPorts": [
    3000,
    3001,
    3002,
    3003,
    3004,
    3005,
    3006,
    3007,
    3008,
    3009,
    3010,
    8000,
    8001,
    8002,
    8003,
    8004,
    8005,
    8006,
    8007,
    8008,
    8009,
    8010
  ],
  "portsAttributes": {
    "3000": {
      "label": "svc-3000"
    },
    "3001": {
      "label": "svc-3001"
    },
    "3002": {
      "label": "svc-3002"
    },
    "3003": {
      "label": "svc-3003"
    },
    "3004": {
      "label": "svc-3004"
    },
    "3005": {
      "label": "svc-3005"
    },
    "3006": {
      "label": "svc-3006"
    },
    "3007": {
      "label": "svc-3007"
    },
    "3008": {
      "label": "svc-3008"
    },
    "3009": {
      "label": "svc-3009"
    },
    "3010": {
      "label": "svc-3010"
    },
    "8000": {
      "label": "svc-8000"
    },
    "8001": {
      "label": "svc-8001"
    },
    "8002": {
      "label": "svc-8002"
    },
    "8003": {
      "label": "svc-8003"
    },
    "8004": {
      "label": "svc-8004"
    },
    "8005": {
      "label": "svc-8005"
    },
    "8006": {
      "label": "svc-8006"
    },
    "8007": {
      "label": "svc-8007"
    },
    "8008": {
      "label": "svc-8008"
    },
    "8009": {
      "label": "svc-8009"
    },
    "8010": {
      "label": "svc-8010"
    }
  },
  "onCreateCommand": "mkdir -p \"$HOME/.config/nix\"; printf 'experimental-features = nix-command flakes\\naccept-flake-config = true\\n' > \"$HOME/.config/nix/nix.conf\"; echo 'eval \"$(direnv hook bash)\"' >> \"$HOME/.bashrc\"; echo 'eval \"$(direnv hook zsh)\"' >> \"$HOME/.zshrc\"; mkdir -p .vscode; nix build .#editor-settings && cp -f result/settings.json .vscode/settings.json; git config --global init.defaultBranch main; git config --global pull.rebase true; git config --global commit.gpgsign false; nix develop . --command bash -lc 'echo nix-homebase ready' ",
  "postStartCommand": "nix build .#editor-settings && cp -f result/settings.json .vscode/settings.json",
  "customizations": {
    "vscode": {
      "settings": {
        "files.trimTrailingWhitespace": true,
        "editor.formatOnSave": true,
        "[nix]": {
          "editor.defaultFormatter": "jnoortheen.nix-ide"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format"
        },
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml"
        }
      },
      "extensions": [
        "tamasfe.even-better-toml",
        "jnoortheen.nix-ide",
        "mkhl.direnv",
        "asvetliakov.vscode-neovim",
        "VSpaceCode.whichkey",
        "ms-vscode-remote.remote-containers",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint",
        "foxundermoon.shell-format",
        "mads-hartmann.bash-ide-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  }
}